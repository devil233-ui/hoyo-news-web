{
  "name": "genshin-news",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@orilight/vue-settings": "^1.1.0",
    "@vueuse/core": "^10.2.0",
    "vue": "^3.3.4",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.43.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "unplugin-auto-import": "^0.16.4",
    "vite": "^4.3.9",
    "vue-tsc": "^1.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.jsx": "eslint --fix",
    "*.ts": "eslint --fix",
    "*.tsx": "eslint --fix",
    "*.vue": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@antfu",
    "rules": {
      "vue/component-tags-order": [
        "error",
        {
          "order": [
            "template",
            "script",
            "style"
          ]
        }
      ]
    }
  }
}
